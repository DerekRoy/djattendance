{
  "name": "djattendance",
  "description": "This app does one little thing, and does it well.",
  "repository": "https://github.com/attendanceproject/djattendance",
  "success_url": "/",
  "scripts": {
    "postdeploy": "python manage.py migrate --noinput",
    "postinstall": "webpack --config webpack/webpack.prod.config.js --progress --colors"
  },
  "stack": "heroku-16",
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "/heroku/heroku-buildpack-pgbouncer"
    }
  ],
  "env": {
    "DJANGO_SECRET_KEY": {
      "description": "A randomly generated secret to secure your Django installation",
      "generator": "secret"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "9.5"
      }
    }
  ]
}
